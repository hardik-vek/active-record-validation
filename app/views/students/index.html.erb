<head>
    <style>
    body{
        text-align:center;

    }
    table, td {
        border: 1px solid black;
        border-collapse: collapse;
        padding:10px;
        text-align:center;
      }
    </style>
</head>
<body>
<center>
    <h1>Student</h1>
    <table>
        <tr><td>Student name</td><td>Show</td><td>Edit</td><td>Delete</td></tr>
        <% @students.each do |student| %>
        <tr>
            <td> <%= student.first_name %> <%= student.last_name %></td>
            <td><%= button_to 'Show', student_path(student), method: 'get' %></td>
            <td><%= button_to 'Edit', edit_student_path(student), method: 'get' %></td>
            <td><%= button_to 'Delete', student_path(student), method: 'delete' %></td>
        </tr>
    <% end %>
    </table>
    <%= link_to "Add a student Member", new_student_path %>
</center>
</body>
